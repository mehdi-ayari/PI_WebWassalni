{% extends 'back.html.twig' %}

         {% block search %}
             <!-- SEARCH FORM -->
             <form class="form-inline ml-3">
                 <div class="input-group input-group-sm">
                     <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                     <div class="input-group-append">
                         <button class="btn btn-navbar" type="submit">
                             <i class="fas fa-search"></i>
                         </button>
                     </div>
                 </div>
             </form>
         {% endblock %}

{%  block news %}


    <div class="card">
    <tr>
    <div class="card-header border-0">

        <div class="card-tools">
            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-download"></i>
            </a>
            <a href="#" class="btn btn-tool btn-sm">
                <i class="fas fa-bars"></i>
            </a>
        </div>
    </div>
    <div class="card-body table-responsive p-0">
    <table class="table table-striped table-valign-middle" id="myTable">

    <thead>
    <tr>
        <th>NEWS</th>
        <th></th>
        <th>INTRODUCTION</th>
        <th>DESCRIPTION</th>
        <th>More</th>
    </tr>
    </thead>
    <tbody>
    {% for n in News %}
        <tr>
            <td style="width: 60px; padding:0px; text-align: center">
                {% if  n.image != '' %}
                    <img style="width:150px;" src="{{ asset('images/') }}{{ n.image }}"/>
                {% else %}
                    atchay
                {% endif %}
            </td>
            <td>
                <strong>
                    {{ n.titre }}
                </strong>
            </td>
            <td>

                <div class="callout callout-warning">
                    <p>{{ n.introduction }}</p>
                </div>

            </td>
            <td>

                <div class="callout callout-warning">
                    <p>{{ n.descr }}</p>
                </div>

            </td>


            <td>
                <a href="{{ path('consulter', { 'id': n.id }) }}" class="text-muted">
                    <i class="fas fa-arrow-circle-right"></i>
                </a>
            </td>
        </tr>
    {% endfor %}


        </tbody>
        </table>
        <div class="card-footer clearfix">

            <a href=" {{ path('ajouternews') }}" class="btn btn-info float-right" >
                <i class="fas fa-plus" href=""> Add News</i>
            </a>


        </div>
        </div>
        </div>


{% endblock %}
