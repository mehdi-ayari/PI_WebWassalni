<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    POST DETAILS
                </h1>
                <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span><a href="{{path ('afficher')}}">News </a> <span class="lnr lnr-arrow-right"></span> <a href="blog-single.html"> Post Details Page</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->

<!-- Start post-content Area -->
<section class="post-content-area single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post row">
                    <div class="col-lg-12">
                        <div class="feature-img">

                            <img class="img-fluid" src="{{ asset('images/') }}{{ News.image }}"/>
                        </div>
                    </div>
                    <div class="col-lg-3  col-md-3 meta-details">

                        <div class="user-details row">
                             <p class="view col-lg-12 col-md-12 col-6">{{ News.views }}  <span class="lnr lnr-eye"></span></p>
                            <p class="comments col-lg-12 col-md-12 col-6"><a href="#">0{{ Comment|length }} Comments</a> <span class="lnr lnr-bubble"></span></p>

                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9">
                        <a class="posts-title" href="#"><h3>{{News.titre}}</h3></a>
                        <strong> {{ News.introduction }} </strong>
                        <p>{{News.descr}} </p>


                    </div>
                    <div class="quotes">

                        <p> THUMBS UP IF YOU LIKE THE ARTICLE</p>
                      <span class="badge badge-pill badge-success">
                          <span class="badge" >Likes {{ News.point }} </span>
                              <a href="{{ path('LikeFront',{'idc':News.id},true) }}"> <i class="fa fa-heart"></i>  </a>
                    </span>
                    </div>


                </div>


                        <div class="row mt-30 mb-30">
                            <div class="col-6">
                                <img class="img-fluid" src="img/blog/post-img1.jpg" alt="">
                            </div>
                            <div class="col-6">
                                <img class="img-fluid" src="img/blog/post-img2.jpg" alt="">
                            </div>

                        </div>
                    </div>
                </div>
                <div class="navigation-area">
                    <div class="row">
                        {% if Newsp != null %}
                        <div class="col-lg-6 col-md-6 col-12 nav-left flex-row d-flex justify-content-start align-items-center">
                            <div class="thumb">
                                <a href="{{ path('consulterfront', { 'id': Newsp.id }) }}"><img class="img-fluid" src="{{ asset('images/') }}{{ Newsp.image }}" style="height: 60px" alt=""></a>
                            </div>
                            <div class="arrow">
                                <a href="#"><span class="lnr text-white lnr-arrow-left"></span></a>
                            </div>
                            <div class="detials">
                                <p>Prev Post</p>
                                <a href="{{ path('consulterfront', { 'id': Newsp.id }) }}"><h4>{{Newsp.titre}}</h4></a>
                            </div>
                        </div>
                        {% endif %}
                        {% if Newsn != null %}
                        <div class="col-lg-6 col-md-6 col-12 nav-right flex-row d-flex justify-content-end align-items-center">
                            <div class="detials">
                                <p>Next Post</p>
                                <a href="{{ path('consulterfront', { 'id': Newsn.id }) }}"><h4>{{Newsn.titre}}</h4></a>
                            </div>
                            <div class="arrow">
                                <a href="#"><span class="lnr text-white lnr-arrow-right"></span></a>
                            </div>
                            <div class="thumb">
                                <a href="{{ path('consulterfront', { 'id': Newsn.id }) }}"><img class="img-fluid"src="{{ asset('images/') }}{{ Newsn.image }}" style="height: 60px" alt=""></a>
                            </div>
                        </div>
                        {% endif %}
                    </div>

                </div>
                <div class="comments-area">
                    <h4>0{{ Comment|length }} Comments</h4>
                    {% for c in Comment %}



                    <div class="comment-list">

                        <div class="single-comment justify-content-between d-flex">
                            <div class="user justify-content-between d-flex">
                                <div class="thumb">
                                    <img style="width:50px;" src="{{ asset('images/') }}{{ c.user.image }}"/>
                                </div>
                                <div class="desc">
                                    <h5><a href="#">{{ c.user.firstname }} {{ c.user.lastname }}</a></h5>
                                    <p class="date">{{ c.createdAt|date('Y-m-d H:i:s') }} </p>
                                    <p class="comment">
                                        {{c.text}}

                                    </p>
                                </div>
                            </div>
                            <div class="reply-btn">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                {% if (c.user.id == app.user.id) %}
                                <a href="{{ path('delete',{'id':c.id }) }}" class="btn-reply text-uppercase">Delete</a>


                                {% endif %}
                                {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                                <br>
                                {% endif %}
                            </div>
                        </div>

                        {% endfor %}
                    </div>

                </div>

                <div class="comment-form">

                    <h4>Leave a Comment</h4>

                    {{ form_start(form) }}
                    <div class="form-group">
                    {{ form_widget(form.text)  }}
                    </div>
                    <input type="submit" value="POST COMMENT" class="primary-btn text-uppercase" href="">


                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End post-content Area -->



