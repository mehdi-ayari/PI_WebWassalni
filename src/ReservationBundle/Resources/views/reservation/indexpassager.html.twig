    <div class="bs-docs-example">
        <table class="table">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(reservations, 'Date Reservation', 'bp.dateReservation') }}</th>
                <th>Point Depart</th>
                <th>Destination</th>
                <th>Prix</th>
                <th>Type Reservation</th>
                <th>Objet</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                {% if user.id == idconnected  %}
                    {% for reservation in reservations %}
                        {% if user == reservation.userClient  %}
                            <tr>
                                <td>{% if reservation.dateReservation %}{{ reservation.dateReservation|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ reservation.pointdepart }}</td>
                                <td>{{ reservation.destination }}</td>
                                <td>{{ reservation.prix }}</td>
                                <td>{{ reservation.typeReservation }}</td>
                                <td>{{ reservation.objet }}</td>
                                <td>
                                    <ul>
                                        <li class="label label-info" > <a style="color:blue"  href="{{ path('reservation_show', { 'id': reservation.id }) }}">show</a></li>
                                        <li class="label label-default"><a style="color: blue" href="{{ path('reservation_edit', { 'id': reservation.id }) }}">edit</a></li>
                                    </ul>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="navigation">
        {{ knp_pagination_render(reservations) }}
    </div>
